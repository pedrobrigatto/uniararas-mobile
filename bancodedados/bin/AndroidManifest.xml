<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.uniararas.posgrad.mobile.bancodedados"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.uniararas.posgrad.mobile.bancodedados.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.uniararas.posgrad.mobile.bancodedados.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="br.uniararas.posgrad.mobile.bancodedados.ListaUsuariosRemotosActivity"
            android:label="@string/title_activity_lista_usuarios_remotos" >
            <intent-filter>
                <action android:name="LISTAR_USUARIOS_REMOTOS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
